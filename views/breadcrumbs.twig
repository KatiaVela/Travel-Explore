{% if breadcrumbs %}
    <div class="breadcrumb flex gap-3 text-sm md:text-base flex-wrap w-fit line-clamp-1 m-6 items-center">
        {% for crumb in breadcrumbs %}
            {% if crumb.url %}
                <a href="{{ crumb.url }}" {% if loop.last %}class="font-bold"{% endif %}>{{ crumb.title }}</a>
            {% else %}
                {{ crumb.title }}
            {% endif %}
            {% if not loop.last %}
                <img src="{{ asset('/assets/images/breadcrumb-separator.png') }}" alt="Separator" class="w-1.5">
            {% endif %}
        {% endfor %}
    </div>
{% endif %}
