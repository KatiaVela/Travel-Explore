{% set counter = 0 %}
{% for image in data.image %}
    {% if image %}
        {% set counter = counter + 1 %}
    {% endif %}
{% endfor %}

<div class="our-trusted-partners text-center w-full flex flex-col justify-center items-center">
    <div class="font-roboto font-normal text-2xl lg:text-4xl leading-10 pb-10">
        <div>
            <h4 class="text-light-p10">Our trusted partners</h4>
        </div>
    </div>
    <div class="w-full">
        <div class="grid gap-6
            grid-cols-1
            sm:grid-cols-2 
            md:grid-cols-3 
            {% if counter > 6 %}
                lg:grid-cols-6
            {% else %}
                lg:grid-cols-{{ counter }}
            {% endif %}
            justify-center
        ">
            {% for data in data.image %}
                {% if data.image %}
                    <a href="{{ data.link }}" target="_blank" rel="noopener noreferrer">
                        <img src="{{ data.image.url }}" alt="{{ data.image.alt ? : 'Partner image' }}" class="w-full h-32 object-cover rounded-lg hover:scale-105 transform transition duration-300" />
                    </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
