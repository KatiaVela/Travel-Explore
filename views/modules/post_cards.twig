<section class="travel-post-cards-module flex flex-wrap gap-6 p-6">
    {% for card in data.card %}
        <div class="flex bg-white shadow-md rounded-lg overflow-hidden w-full lg:w-auto max-w-lg">
            <div class="relative w-full h-48">
                <img src="{{ card.image.url }}" alt="{{ card.image.alt }}" class="absolute inset-0 w-full h-full object-cover">
            </div>
            <div class="card-content p-4 w-full flex flex-col justify-between">
                <h2 class="text-xl font-semibold mb-2">{{ card.title }}</h2>
                <div class=" text-gray-500 mb-2">{{ card.duration }}</div>
                <div class=" text-gray-700 mb-4">{{ card.description|raw }}</div>
                <div class="text-green-600 font-bold text-lg mb-4">{{ card.price }}</div>
                <div class="text-yellow-500 mt-4 mb-2">{{ card.rating }}</div>
                <div class="flex space-x-2 mb-4">
                    {% for icon in card.icon %}
                        {% if icon.image %}
                            <img src="{{ icon.image.url }}" alt="{{ icon.image.alt }}" class="w-6 h-6">
                        {% endif %}
                        <span class="text-gray-600">{{ icon.text }}</span>
                    {% endfor %}
                </div>
                <a href="{{ card.button.url }}" class="button bg-green-600 text-white py-2 px-4 rounded hover:bg-green-700" target="{{ card.button.target }}">{{ card.button.title }}</a>
            </div>
        </div>
    {% endfor %}
</section>
