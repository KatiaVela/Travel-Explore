
<section class=" travel-post-cards-module flex flex-wrap gap-6  w-full">
    {% for card in data.card %}
        <div class="flex flex-row bg-white border border-light-nv80 bg-light-n98 shadow-lg rounded-lg overflow-hidden w-full">
            <div class="relative flex-none w-1/3 h-auto p-3">
                <img src="{{ card.image.url }}" alt="{{ card.image.alt }}" class="w-full h-full object-cover rounded-lg">
            </div>
            <div class="card-content p-4 flex-grow flex flex-col justify-between w-2/4">
                <h2 class="text-xl font-semibold mb-2 text-brown-750">{{ card.title }}</h2>
                <div class="text-gray-500 mb-2 px-2">{{ card.duration }}</div>
                <div class="lineHeight-32 line-clamp-3 mb-4">{{ card.description|raw }}</div>
                <div class="flex items-center space-x-1 text-yellow-500 mb-4">
                    {% for i in (1..5) %}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.518 4.67a1 1 0 00.95.69h4.928c.969 0 1.371 1.24.588 1.81l-3.993 2.906a1 1 0 00-.364 1.118l1.518 4.67c.3.921-.755 1.688-1.54 1.118l-3.993-2.906a1 1 0 00-1.175 0l-3.993 2.906c-.784.57-1.839-.197-1.54-1.118l1.518-4.67a1 1 0 00-.364-1.118L2.976 9.098c-.783-.57-.381-1.81.588-1.81h4.928a1 1 0 00.95-.69l1.518-4.67z"/>
                        </svg>
                    {% endfor %}
                </div>
                <div class="flex flex-wrap gap-2 mb-4">
              
                {% if current_category %}

                    <div class="relative group w-6 h-6 inline-block">
                        <img src="{{ current_category.icon }}" alt="{{ current_category.name }}" class="w-full h-full">
                        <a href="{{ site.url }}/tourism-category/{{ current_category.slug }}" class="absolute inset-0"></a>
                        <div class="absolute top-full mt-2 hidden group-hover:flex flex-col items-center">
                            <div class="bg-brown-350 text-white text-center text-xs py-1 px-2 rounded shadow-md whitespace-nowrap">
                                {{ current_category.name }}
                            </div>
                            <div class="w-2 h-2 bg-[#009696] transform rotate-45 mt-[-4px]"></div>
                        </div>
                    </div>
                {% else %}
                    <li>No categories found.</li>
                {% endif %}
                </div>
            </div>
            <div class="p-4 flex-none w-1/4 flex flex-col justify-between border-l border-gray-200 text-center">
                <div class="text-lg font-bold text-center text-brown-750 mb-2">{{ card.price }}</div>
                <div class="flex items-center text-sm text-gray-500 mb-4">
                    <svg class="w-4 h-4 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.105 0-2 .672-2 1.5S10.895 11 12 11s2-.672 2-1.5S13.105 8 12 8z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m8-8h-1m-15 0H3m4.22-5.48l-.64-.64m0 10.24l-.64.64M18.78 4.78l-.64-.64m0 10.24l-.64.64M8 12h8m-8 0H8m0-3h8m-8 6h8"/>
                    </svg>
                    Easy
                </div>
                <a href="{{card.button.url}}" class="button bg-transparent text-light-p40 border border-light-p40 py-2 px-4 rounded hover:bg-light-p40 hover:text-white-100">
                    {{ card.button.title }}
                </a> 
            </div>
        </div>
    {% endfor %}
</section>