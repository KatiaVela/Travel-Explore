{% extends "base.twig" %}

{% block content %}
    <div class="user-journey">
        <img src="{{featured_image}}" alt="{{ author_image.alt }}">
    
        <div class="background-image">
            <img src="{{ author_image.url }}" alt="{{ author_image.alt }}">
        </div>
        <h1>{{ title }}</h1>
        <div class="description">
            {{ description }}
        </div>
        <div class="gallery">
            {% for image in gallery %}
                <img src="{{ image.url }}" alt="{{ image.alt }}">
            {% endfor %}
        </div>
    </div>
{% endblock %}
