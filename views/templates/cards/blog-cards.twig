{% for post in posts %}
    <div class="bg-white p-4 rounded-lg grid blog-content">
        <img src="{{ post.thumbnail }}" class="w-full lg:min-w-[228px] lg:min-h-[186px] md:max-w-[228px] max-h-[186px] rounded-lg"/>
        <span class="bg-light-p40 px-3 py-1 text-white-100 font-normal text-sm w-fit rounded-2xl mt-6 flex align-center justify-center">{{post.ribbon ? post.ribbon : 'UI/UX Designer'}}</span>
        <a href="{{ post.permalink }}" >
        <h4 class="mt-2.5 text-light-p10 text-2xl">{{ post.title }}</h4>
        <p class="mt-2">{{ post.content|truncate(20) }}</p>
        </a>
        <a href="{{ post.author_url }}" class="mt-8 flex gap-2">
            <img src="{{ post.author_image }}" alt="Author Avatar" class="max-w-[48px] h-12 rounded-full"/>
            <div class="flex flex-col gap-1">
                <p class="font-medium">{{post.author_name}}</p>
                <p>{{ post.author_ribbon ? post.author_ribbon : 'Product Designer' }}</p>
            </div>
        </a>
     </div>    
{% endfor %}