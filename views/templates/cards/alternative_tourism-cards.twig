{% for post in posts %}
    <div class="p-4 blog-content rounded-lg border-light-nv80 border">
        <div class="flex justify-center items-center sm:grid-cols-2 rounded-lg">
            <img src="{{ post.thumbnail }}" class=" w-full h-56 md:justify-center items-center object-cover rounded-lg"/>
        </div>
        <div class="h-[300px] flex flex-col justify-between">
        <div>
        <span class="bg-light-p40 px-3 py-1 text-white-100 font-normal text-sm w-fit rounded-2xl mt-6 flex align-center justify-center">{{ post.ribbon ? post.ribbon : 'UI/UX Designer' }}</span>
        <a href="{{ post.permalink }}">
            <h4 class="mt-2.5 text-light-p10 text-2xl">{{ post.title }}</h4>
            <p class="mt-2">{{ post.content|truncate(40) }}</p>
        </a>
        </div>
        
        <a href="{{ post.author_url }}" class="mt-8 flex gap-2">
            <img src="{{ post.author_image }}" alt="Author Avatar" class="w-12 h-12 rounded-full"/>
            <div class="flex flex-col gap-1">
                <p class="font-medium">{{ post.author_name }}</p>
                <p>{{ post.author_ribbon ? post.author_ribbon : 'Product Designer' }}</p>
                
            </div>
        </a>
        
    </div>
    </div>
{% endfor %}


