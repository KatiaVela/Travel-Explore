{% extends "base.twig" %}

{% block content %}
<section class="card-detail-module p-6 w-full">
    {% if card %}
        <div class="bg-white shadow-lg rounded-lg overflow-hidden w-full">
            <div class="relative w-full h-48">
                <img src="{{ card.image.url }}" alt="{{ card.image.alt }}" class="w-full h-full object-cover">
            </div>
            <div class="card-content p-4">
                <h2 class="text-2xl font-bold mb-4 text-brown-750">{{ card.title }}</h2>
                <div class="text-gray-500 mb-2">{{ card.duration }}</div>
                <div class="text-gray-700 mb-4">{{ card.description|raw }}</div>
                <div class="text-lg font-bold text-brown-750 mb-2">{{ card.price }}</div>
                <a href="{{ card.button.url }}" class="button bg-transparent text-light-p40 border border-light-p40 py-2 px-4 rounded hover:bg-light-p40 hover:text-white-100" target="{{ card.button.target }}">
                    {{ card.button.title }}
                </a>
            </div>
        </div>
    {% else %}
        <p>No card found.</p>
    {% endif %}
</section>
{% endblock %}
